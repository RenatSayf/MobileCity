<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@drawable/bg_radio_group"
        >

        <RadioButton
            android:id="@+id/btn_objects"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn_default"
            android:button="@android:color/transparent"
            android:text="Объекты"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="2dp"
            android:checked="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_business_white"
            android:textAllCaps="false"
            />

        <RadioButton
            android:id="@+id/btn_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn_default"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="2dp"
            android:text="Все"
            android:checked="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_cell_tower_white"
            android:textAllCaps="false" />

        <RadioButton
            android:id="@+id/btn_transport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn_default"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="2dp"
            android:text="Транспорт"
            android:checked="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_bus_white"
            android:textAllCaps="false" />

    </RadioGroup>

</androidx.appcompat.widget.LinearLayoutCompat>